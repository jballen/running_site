<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "LogAJog", root_path, id:"logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to "Home", current_user %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Teams <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% unless current_user.teams.nil? %>
                  <% current_user.teams.each do |team| %>
                    <% unless team.nil? %>
                      <li><%= link_to team.name, team %></li>
                    <% end %>
                  <% end %>
                  <li class="divider"></li>
                <% end %> 
                <li><%= link_to "Find Team", teams_path %></li>
                <li><%= link_to "Create Team", '/teams/new' %></li>
                <li class="divider"></li>
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>