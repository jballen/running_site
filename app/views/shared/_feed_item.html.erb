<li id="<%= feed_item.id %>">
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="distance">
    <%= conjugate_verb_to_past_tense feed_item.activity %>
    <% if !feed_item.distance.nil? %>
      <%= feed_item.distance.round(2) %> miles in </span>
    <% else %>
      for
    <% end %>
  <span class="duration"><%= format_duration(feed_item.duration)%></span>
  <div class="activity_date">
    <%= format_activity_date(feed_item.activity_date) %>
    <% if current_user?(feed_item.user) %>
        <%= link_to "delete", feed_item, method: :delete,
                                         data: { confirm: "You sure?" },
                                         title: feed_item.created_at %>
    <% end %>
  </div>
</li>