<%= simple_form_for @exercise do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="activityType">
      <%= f.input :activity, :include_blank => false %>
    </div>
    <div class="distanceForm">
      <%= f.input :distance, input_html: { min: 0 } %>
    </div>
    <div class="duration">
      <%= f.label :duration %>
      <%= f.input :duration, as: :string, label: false, input_html: { id:"hours", name:"exercise[duration_hours]" }%><p>hrs</p>
      <%= f.input :duration, as: :string, label: false, input_html: { id:"minutes", name:"exercise[duration_minutes]" }%><p>mins</p>
      <%= f.input :duration, as: :string, label: false, input_html: { id:"seconds", name:"exercise[duration_seconds]" }%><p>secs</p>
    </div>
    <%= f.input :comment %>
    <div class="dateForm">
      <%= f.input :activity_date %>
    </div>

    <%= f.button :submit, class: "btn btn-large" %>
<% end %>