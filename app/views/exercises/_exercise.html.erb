<li>
  <span class="activity">Activity: <%= exercise.activity.capitalize %>.</span>
  <% if !exercise.distance.nil? %>
    <span class="distance">Distance: <%= exercise.distance %>.</span>
  <% end %>
  <span class="duration">Time: <%= format_duration(exercise.duration) %>.</span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(exercise.created_at) %> ago.
  </span>
  <% if current_user?(exercise.user) %>
    <%= link_to "delete", exercise, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: exercise.created_at %>
  <% end %>
</li>