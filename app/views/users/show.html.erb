<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.exercises.any? %>
      <h3>Activities (<%= @user.exercises.count %>)</h3>
      <ol class="exercises">
        <%= render @exercises %>
      </ol>
      <%= will_paginate @exercises %>
    <% end %>
  </div>
</div>