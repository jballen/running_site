<% provide(:title, @user.name) %>
<div class="userShowWrapper">
  <div class="userInformation">
    <%= image_for @user %>
    <div class="userInformationHeader">
      <h3>
        <%= @user.name %>
      </h3>
      <%= render 'shared/user_stats' %>
    </div>
    <div class="activityFeed">
      <h3>Activity Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <%= render 'shared/exercise_form' unless current_user != @user %>
  <%= render 'shared/comment_modal' %>
  <div class="calendar">
    <script type="text/template" id='calendar-template'>
      <div class="clndr-controls">
        <div class="btn-group">
          <button class="text-left btn  clndr-previous-button previous-btn">
          <i class="fa fa-play fa-rotate-180"> </i>
          </button>
          <button class="btn  clndr-next-button next-btn">
            <i class="fa fa-play"> </i>
          </button>
        </div>
        <div class="month"><%%= month %></div>
      </div>
      <div class="clndr-grid">
        <div class="days-of-the-week clearfix">
          <%% _.each(extras.days, function(day) { %>
            <div class="header-day"><%%= day %></div>
          <%% }); %>
        </div>
        <div class="days clearfix">
          <%% _.each(days, function(day) { %>
            <div class="<%%= day.classes %>" id="<%%= day.id %>">
              <span class="day-number"><%%= day.day %></span>
              <%% _.each(day.events, function(day_event) { %>
                <%= render 'shared/day_event' %>
              <%% }) %>
            </div>
          <%% }); %>
        </div>
      </div>
    </script>
  </div>
</div>